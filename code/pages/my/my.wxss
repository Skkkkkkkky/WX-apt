/**index.wxss**/
#login{
  margin-top: 100rpx;
  color: red;
  border-color: red;
}
#pic{
  width: 100%;
  height: 350rpx;
  filter: blur(10rpx);
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 120rpx;
  border-radius: 50%;
  position: absolute;
  top: -70rpx;
  left: 300rpx;
}

.userinfo-nickname {
  color:#fff;
  font-weight: bold;
  position: absolute;
  top: 200rpx;
  left: 300rpx;
}
#sortPart{
  margin: 20rpx 0;
}
#sortPart image{
  width: 60rpx;
  height: 50rpx;
  margin: 0 63rpx;
  margin-top: 20rpx;
}
.float-r{
  float:right;
}
.cb{
  clear: both;
}
.sortView{
  width: 185rpx;
  height: 50%;
  float: left;
  text-align: center;
  margin: 10rpx 0;
}
#sortPart text{
  font-size: 25rpx;
  font-family: "楷体";
}
#personal{
  height: 500rpx;
  margin-top: 40rpx;
}
#personal view{
  padding: 0 40rpx;
  border-bottom: 1rpx solid gray;
  height: 100rpx;

}
#personal image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  float: left;
}
#personal view text{
  font-size: 35rpx;
  margin-left: 20rpx;
  line-height: 100rpx;
  font-family: '楷体';
}